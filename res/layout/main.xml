<?xml version="1.0" encoding="utf-8"?>
    
<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scrollView1" 
	android:layout_width="wrap_content" 
	android:background="@drawable/bg" 
	android:layout_height="wrap_content">   


	<RelativeLayout 
		android:id="@+id/containerAll" 
		android:layout_height="match_parent" 
		android:layout_width="wrap_content" >
	    
	    <!-- Container fÃ¼r Elemente -->
	    <RelativeLayout 
	    	android:layout_marginTop="300dip" 
	    	android:id="@+id/containerLoginElemente" 
	    	android:layout_height="wrap_content" 
	    	android:layout_width="wrap_content" 
	    	android:layout_marginLeft="20dip">
	        
	        <TextView 
	        	android:id="@+id/labelPin" 
	        	android:textColor="#000000" 
	        	android:textSize="20dip" 
	        	android:layout_height="wrap_content" 
	        	android:text="@string/labelPinEigeben" 
	        	android:layout_width="wrap_content" />
	        
	        <EditText 
	        	android:id="@+id/inputPinEingabe" 
	        	android:width="200dip" 
	        	android:layout_alignLeft="@+id/labelPin" 
	        	android:inputType="textPassword" 
	        	android:layout_below="@+id/labelPin" 
	        	android:layout_width="wrap_content" 
	        	android:layout_height="wrap_content" />
	        
	        <Button 
	        	android:layout_alignBottom="@+id/inputPinEingabe" 
		        android:id="@+id/buttonPinOK" 
		        android:layout_toRightOf="@+id/inputPinEingabe" 
		        android:layout_alignTop="@+id/inputPinEingabe" 
		        android:layout_height="wrap_content" 
		        android:text="@string/buttonOK" 
		        android:layout_width="wrap_content" />
	    </RelativeLayout>
	    
	    <RelativeLayout 
	    	android:id="@+id/containerRegister" 
	    	android:layout_width="match_parent" 
	    	android:layout_height="wrap_content" 
	    	android:layout_below="@+id/containerLoginElemente"
	    	android:layout_alignLeft="@+id/containerLoginElemente" >
		
		    <TextView 
		        android:layout_height="wrap_content" 
		        android:layout_alignParentLeft="true" 
		        android:id="@+id/labelRegisterAccount" 
		        android:text="@string/labelRegisterAcc" 
				android:textColor="#000000"
				android:layout_gravity="center"
				android:layout_width="match_parent"/>
	    
	    </RelativeLayout>
	</RelativeLayout>
</ScrollView>
